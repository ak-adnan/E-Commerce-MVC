            <a class="btn btn-primary" href="@Url.Action("Index", "Categories")">Manage Categories</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-primary" href="@Url.Action("Index", "Products")">Manage Products</a>
        </div>
